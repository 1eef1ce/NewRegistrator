.dropdown-toggle
  display flex
  align-items center
  justify-content space-between
  &:after
    content ""
    display block
    width 5px
    height 8px
    margin-left 10px
    transition transform .2s, margin-top .2s
    mask-image url('../assets/images/arrow.svg')
    mask-size contain
    background-color #706C71
    transform rotate(90deg)
    border 0
  &[aria-expanded='true']
    color colorBlue
    &:after
